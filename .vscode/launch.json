    "version": "0.2.0",
    "configurations": [
        {
            "name": "PowerShell Interactive Session",
            "type": "PowerShell",
            "request": "launch",
            "cwd": "${cwd}",
            "createTemporaryIntegratedConsole": true,
            "args": ["-NoProfile"]
        },
        {
            "name": "PowerShell Launch Current File",
            "type": "PowerShell",
            "request": "launch",
            "script": "${file}",
            "cwd": "${cwd}"
        },
        {
            "name": "Build",
            "type": "PowerShell",
            "request": "launch",
            "script": ".\"${workspaceFolder}/build.ps1\" -ErrorAction Stop",
            "args": [],
            "createTemporaryIntegratedConsole": true
        },
        {
            "name": "Debug",
            "type": "PowerShell",
            "request": "launch",
            "script": ".\"${workspaceFolder}/build.ps1\" -SkipIsolation -SkipHelp -ErrorAction Stop; Import-Module \"$($env:BHBuildOutput)\\$($env:BHProjectName).psd1\" -Force",
            "args": [],
            "createTemporaryIntegratedConsole": true
        },
        {
            "name": "Build and Test",
            "type": "PowerShell",
            "request": "launch",
            "script": ".\"${workspaceFolder}/build.ps1\" -Task Build, integration-tests -SkipIsolation -ErrorAction Stop",
            "args": [],
            "createTemporaryIntegratedConsole": true
        }
    ]
}
